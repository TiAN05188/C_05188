<body>
  <div class="heart">♥</div>
  <div class="message">你愿意当我的女朋友吗？</div>
  <div class="buttons">
    <button onclick="reply(true)">好呀</button>
    <button onclick="reply(false)">还不到哟</button>
  </div>
  <div class="response" id="response"></div>

  <script>
    function reply(yes) {
      const response = document.getElementById("response");
      if (yes) {
        response.textContent = "好呀！";
      } else {
        response.textContent = "好哒！";
      }
    }
  </script>
